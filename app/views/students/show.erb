<h1><%= @student.name %></h1>

<h2>Username: <%=  @student.username %></h2>

<h3>Courses:</h3>
<ul>
  <% @student.courses.each do |course| %>
    <li><a href="/courses/<%= course.slug %>"><%= course.subject %>,</a> taught by: <a href="/teachers/<%= course.teacher.slug %>"><%= course.teacher.name %></a></li>
  <% end %>
</ul>

<a href="/students/<%= @student.slug %>/edit">Edit Student Profile</a>
